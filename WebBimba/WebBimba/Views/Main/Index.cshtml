@model List<WebBimba.Data.Entities.CategoryEntity>

<h1 class="text-center">Оберіть потрібну категорію</h1>

<div class="container">
    <a asp-action="Create" class="btn btn-success">Додати</a>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="card" style="width: 100%;">
                    <img src="/uploading/@item.Image" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <a href="#" class="btn btn-danger" data-delete="@item.Id">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

